<?xml version="1.0" encoding="utf-8"?>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/action_bar_height"
		android:orientation="horizontal"
		android:background="@drawable/bg_actionbar">
	
		<ImageView 
			android:id="@+id/action_bar_logo"
			android:src="@drawable/ic_action_bar_logo"
			android:layout_width="@dimen/action_bar_height"
	        android:layout_height="fill_parent"
	        android:scaleType="center"/>
	
		<ImageButton
			style="@style/ActionBarButton"
			android:id="@+id/action_bar_home_button"
			android:src="@drawable/btn_up"
			android:visibility="visible"
			android:layout_width="25dp"
			android:layout_gravity="right|center_vertical"
			android:gravity="right|center_vertical"/>
			
		<ImageView
		    android:id="@+id/action_bar_separator_to_left_of_text" 
		    style="@style/ActionBarSeparator"
		    android:visibility="gone"/>
		
		<TextView 
			style="@style/ActionBarText"
			android:id="@+id/action_bar_text"/>
		
		<FrameLayout
		    android:id="@+id/action_bar_custom_content_view_holder"
		    android:layout_width="0dp"
		    android:layout_height="fill_parent"
		    android:layout_weight="1"
		    android:visibility="gone"/>
			
		<ImageView 
			style="@style/ActionBarSeparator"
			android:id="@+id/action_bar_separator3"
			android:visibility="gone"/>	
			
		<ImageButton
			style="@style/ActionBarButton"
			android:id="@+id/action_bar_button3"
			android:visibility="gone"/>
			
			
		<ImageView 
			style="@style/ActionBarSeparator"
			android:id="@+id/action_bar_separator2"
			android:visibility="gone"/>	
			
		<ImageButton
			style="@style/ActionBarButton"
			android:id="@+id/action_bar_button2"
			android:visibility="gone"/>	
			
			
		<ImageView 
			style="@style/ActionBarSeparator"
			android:id="@+id/action_bar_separator1"
			android:visibility="gone"/>	
			
		<ImageButton
			style="@style/ActionBarButton"
			android:id="@+id/action_bar_button1"
			android:visibility="gone"/>
		
	</LinearLayout>